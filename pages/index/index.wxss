/**index.wxss**/
.swiper{
  width: 100%;
  height: 500rpx;
}

.slide-image{
  width: 100%;
  height: 500rpx;
}

.title{
  width: 100%;
  padding: 40rpx 30rpx 10rpx 30rpx;
  background: #fff;
}

.head{
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
}

.sub_head{
  font-size: 24rpx;
  display: block;
  color: #c1d3ee;
  width: 100%;
}

.news_content{
  white-space: nowrap;
  display: flex;
  background: #fff;
  padding-bottom: 20rpx;
}

.news_item{
    display: inline-block;
    margin-left: 30rpx;
}

.news_item:last-child{
   margin-right: 30rpx;
}

.news-image{
   width: 250rpx;
   height: 350rpx;
}

.news{
  margin-bottom: 20rpx;
}

.hot{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  padding: 0rpx 30rpx 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.column{
  display: flex;
  flex-basis:100%;
  justify-content: flex-start;
}

.hot_image{
  width: 340rpx;
  height: 510rpx;
}

.container{
  background: #ebe8ea;
}